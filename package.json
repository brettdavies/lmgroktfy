{
  "name": "lmgroktfy",
  "version": "1.0.0",
  "description": "Let me Grok that for you",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:shared": "bun run --cwd packages/shared build",
    "build:client": "bun run --cwd packages/client build",
    "build:web": "bun run --cwd packages/web build",
    "dev": "bun run --cwd packages/web dev",
    "test": "bun test",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,css}\" \"packages/*/public/**/*.html\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,css}\" \"packages/*/public/**/*.html\"",
    "typecheck": "tsc --noEmit -p packages/shared && tsc --noEmit -p packages/client && tsc --noEmit -p packages/web",
    "deploy": "bun run build && bun run --cwd packages/web deploy",
    "prepare": "husky",
    "i18n:extract": "bun scripts/extract-i18n.ts",
    "i18n:validate": "bun scripts/validate-i18n.ts",
    "i18n:sync": "bun scripts/sync-translations.ts",
    "i18n:status": "bun scripts/i18n-status.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@tailwindcss/cli": "4.1.17",
    "@types/bun": "latest",
    "daisyui": "5.5.8",
    "husky": "^9.1.7",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.17",
    "typescript": "^5.7.0",
    "wrangler": "~4.50.0",
    "zod": "^3.23.0"
  }
}
